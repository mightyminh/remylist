<div class="container">
    <div class="jumbotron bg home-banner">
        <h1 class="text-center">Remy's List <br>
            <img src="assets/img/bearpigcircle.png" alt="bearpig" align="middle" style="width:30%">
        </h1>
        <p class="text-center logo-subtext">Your Neighborhood Hub</p>
    </div>
    <div class="row home-login">
        <div class="col-md-4 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Just Browsing?</h3>
                </div>
                <div class="panel-body text-center">
                    <p> Check out what people are lending </p>
                    <a href="/all-items" class="btn btn-warning">Browse</a></button>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Login</h3>
                </div>
                <div class="panel-body">
                    <small id="login-message" class="form-text text-muted">{{loginMessage}}</small>
                    <form method="post" action="/login">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Username" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary button-signin">Sign in</button>
                    </form>
                    <a href="/signup"> Signup to Lend & Borrow </a>
                </div>
            </div>
        </div>
    </div>
</div>