                    <div id="id01" class="modal">
                      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">Ã—</span>
                      
                      <form class="modal-content animate" action="/action_page.php">
                        <div class="container">
                          <label class="add-text"><b>Item Name</b></label>
                          <input class="add-input" type="text" placeholder="Enter Item Name" name="item-name" required>

                          <label class="add-text"><b>Item Description</b></label>
                          <input class="add-input" type="text" placeholder="Enter a description for your item" name="description" required>

                          <label class="add-text"><b>Image URL</b></label>
                          <input class="add-input" type="text" placeholder="Enter URL for image" name="item-image">
                          <br>      
                          <div class="dropdown">
                            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                Category
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu category" aria-labelledby="by-category">
                                <li class="category1"><a href="#">Home Goods</a></li>
                            <li class="category2"><a href="#">Academic</a></li>
                            <li class="category3"><a href="#">Jewelery</a></li>
                            <li role="separator" class="divider"></li>
                            </ul>
            </div>
            <br>
            <div class="clearfix">
                <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
