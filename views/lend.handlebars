                <p>Items you are offering to lend</p>
                <table class="table lending-info">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Image url</th>
                        <th>Status</th>
                        <th>Borrower</th>
                        <th></th>
                    </tr>
                    {{#each items}}
                    <tr>
                        <td>{{this.name}} </td>
                        <td>{{this.category}} </td>
                        <td>{{this.description}} </td>
                        <td><a href="{{this.imageURL}}" target="_blank">Click me</td>
                {{#if this.available}}
            <td>Available <button type="button" class="btn btn-danger btn-xs" id="make-unavailable" available-item-id="{{this.id}}">Change</button> </td>
        {{else}}
        <td>Unavailable <button type="button" class="btn btn-success btn-xs" id="make-available" unavailable-item-id="{{this.id}}">Change</button> </td>
        {{/if}}
        <td>{{this.Borrower.fullName}} </td>
        <td><button type="button" class="btn btn-primary btn-xs" id="edit-item" edit-item-id="{{this.id}}">Edit</button></td>       
    </tr>
    {{else}}
    <p>Record not available</p>
    {{/each}}
</table>

                   
                </div>
